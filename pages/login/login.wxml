  <view class="logo">
    <image src="/assets/img/ic_login_logo.png" />
  </view>
  <view class="form">
    <input placeholder="手机号/邮箱" value="{{username}}" bindinput="saveUserName" />
    <input placeholder="密码" password value="{{password}}" bindinput="savePassWord" />
    <button bindtap="submitOfLogin">登录</button>
  </view>
  <view class="copyright">
    掘金·juejin.im
  </view>
</view>
